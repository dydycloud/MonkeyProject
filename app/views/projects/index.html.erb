<%= content_for :title, "Projects-Home" %>
<div class="row">
  <% @projects.each do |project| %> 
    <div class="large-4 columns">
      <% if project.complete == true %>
          <h3 class="success label"><%= project.name %></h3>
      <% else %>
          <h3 class="alert label"><%= project.name %></h3>
      <% end %>
      <p><%= project.description %></p> 
      <p>Dead Line : <%= distance_of_time_in_words(@from_time, project.dead_line) %></p>
      <%= link_to 'Show', project, :class => 'button tiny round' %>
      <%= link_to 'Edit', edit_project_path(project), :class => 'button tiny round' %>
      <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button tiny round' %>
    </div>
  <% end %>
</div>
